%section
  %div{ :id => "center-container" }
    %div{ :id => "main-box" }
      = form_tag do
        = text_field :put, :issue_name, :name => 'what-text', :placeholder=>"e.g. Airbears", :autofocus => 'true'
        = label :issue, :name, "sucks!"
        = submit_tag '', :id => 'submit_arrow'
    %div{ :id => "sub-box" }
      %center
        = link_to "Take me to a list of projects!", "/projects", :id => 'projects-index'

%section 
  %div{ :id => "center-container" }
    %div{ :id => "content-container" }
      - if @notice != nil
        %div{ :class => "notice-swiss-army-box"}
          %center
            %p= @notice
      %div{ :class => "dark-swiss-army-box"}
        %p
          %span
            = "#{@issue_name} Sucks!"
          %br
          %br
          - if @issue.as_a == "" or @issue.as_a == nil
            = "As a user of " + @issue_name
          - else
            = "As a " + @issue.as_a
          %br
          = "So that " + @issue.so_that
          %br
          = "I want " + @issue.i_want
          %br
        %center
          %div{ :class => "progress" }
            %div{ :class => "progress-col left-round filled-in" }
              SUBMITTED
            %div{ :class => "progress-col" }
              IN PROGRESS
            %div{ :class => "progress-col right-round" }
              COMPLETED
      %div{ :class => "swiss-army-box" }
        %div{ :class => "content-title" }
          Questions from the developer
        %center
          %br
          %p
            No developers have claimed this task yet...
          =link_to "I AM A DEVELOPER", "#", :class => 'content-button', :id => 'dev-request'
          %p
            (Feature coming soon)
          %br
      %div{ :class => "swiss-army-box" }
        %div{ :class => "content-title" }
          Discussion
        %center
          = form_tag({:url => "/"}, :id => "comments-form", :method => :get) do
            %div{ :class => 'expandingArea' }
              %pre
                %span
                %br
              = text_area :get, :comment_text, :name => 'comment-text', :placeholder => "Contribute to the discussion"
            = submit_tag "SUBMIT COMMENT", :id => 'submit_arrow' 
          %p 
            = "(Feature coming soon)"
          %br
  %div{ :id => "request-popup" }
    %div{ :id => "close-popup" }
      x
    %center
      %h2
        Request Pivotal Tracker Access
        = form_tag({}, :id => "dev-request-form") do
          = text_field :put, :name, :name => 'name', :placeholder => 'Name'
          %br
          %br
          = text_field :put, :email, :name => 'email', :placeholder => 'Email'
          %br
          %br
          = text_field :put, :pid, :name => 'pid', :placeholder => 'Pivotal Tracker Id'
          %br
          %br
          = submit_tag "REQUEST", :id => 'submit_arrow'
  %div{ :id => "overlay" }

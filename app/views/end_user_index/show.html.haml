%section
  %div{ :id => "center-container" }
    %div{ :id => "content-container" }
      %div{ :id => "issues-table" }
        %div{ :id => "faux-th" }
          - if @issues != []
            %div{ :class => "col1" }
              - if @issues.size == 1
                &nbsp&nbsp&nbsp#{@issue_name} sucks! Is this your issue?
              - else 
                &nbsp&nbsp&nbsp#{@issue_name} sucks! Are any of these your issue?
            %div{ :class => "col2" }
              %center
                Date Added
            %div{ :class => "col3" }
              %center
                Votes
            - @issues.each do |issue|
              %a{ :href => "/issue_info/#{issue.id}?vote=true" }
                %div{ :id => "faux-tr" }
                  %div{ :class => "col1" } 
                    %div= "As a #{issue.as_a}, I want #{issue.i_want} so that #{issue.so_that}"
                  %div{ :class => "col2" }
                    %center= issue.date_entered.month.to_s + "/" + issue.date_entered.day.to_s + "/" + issue.date_entered.year.to_s
                  %div{ :class => "col3" }
                    %center= issue.votes      
      %div{ :class => "swiss-army-box" }
        %div{ :class => "content-title" }
          - if @issues == []
            = "You're the first to have trouble with " + params[:issue_name] + ". Please create a new issue!"
          - else  
            Want to create a new issue for
            = params[:issue_name] + "?"
        %center
          =link_to "SUBMIT NEW ISSUE", "/specific_issue/" + params[:issue_name], :class => 'content-button'
